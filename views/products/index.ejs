<html>
<head>
    <meta charset="utf-8">
    <title>Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="margin-top: 50px;">
        <div class="card shadow " style="width: 100%;">
            <h4 class="card-header text-center">
                Products
            </h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" width="5%">ID</th>
                        <th scope="col" width="10%">Image</th>
                        <th scope="col" width="20%">Name</th>
                        <th scope="col" width="5%">Category</th>
                        <th scope="col" width="5%">Amount</th>
                        <th scope="col" width="5%">Sold</th>
                        <th scope="col" class="text-center" width="15%">
                            <a href="/product/add">
                                <i class="fas fa-plus-circle"></i>
                                Add Product
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < list.length; i++) { %>
                    <tr>
                        <th scope="row"><%= list[i].ProId %></th>
                        <td>
                            <img src="<%= list[i].ProImg %>" height="100" width="100" alt="">
                        </td>
                        <td><%= list[i].ProName %></td>
                        <td><%= list[i].ProCat %></td>
                        <td><%= list[i].ProAmount %></td>
                        <td><%= list[i].Sold %></td>
                        <td class="text-center">
                            <a href="/product/update/<%= list[i].ProId %>">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/product/delete/<%= list[i].ProId %>">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>